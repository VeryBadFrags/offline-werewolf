{
  "name": "offline-werewolf",
  "private": true,
  "scripts": {
    "build": "make",
    "babel": "babel src -d build",
    "html-minifier": "html-minifier --collapse-whitespace --remove-comments --use-short-doctype --minify-css true --minify-js true build/index.html -o dist/index.html",
    "marked": "marked -o build/rules.html -i src/rules.md && marked -o build/footer.html -i src/footer.md --mangle",
    "qrcode": "qrcode -o dist/qr.png https://wolf.verybadfrags.com",
    "sass": "node-sass --no-source-map src/style.scss build/style.css --output-style compressed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VeryBadFrags/offline-werewolf.git"
  },
  "author": "VeryBadFrags",
  "dependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "html-minifier": "^4.0.0",
    "marked": "^1.2.2",
    "node-sass": "^4.14.1",
    "qrcode": "^1.4.4"
  }
}
