{
  "name": "offline-werewolf",
  "version": "1.0.0",
  "description": "A standalone hidden role multiplayer game.",
  "scripts": {
    "babel": "babel src -d build",
    "html-minifier": "html-minifier --collapse-whitespace --remove-comments --use-short-doctype --minify-css true --minify-js true build/index.html -o dist/index.html",
    "qrcode": "qrcode -o dist/qr.png https://wolf.verybadfrags.com",
    "sass": "node-sass --no-source-map src/style.scss src/style.css --output-style compressed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VeryBadFrags/offline-werewolf.git"
  },
  "author": "VeryBadFrags",
  "bugs": {
    "url": "https://github.com/VeryBadFrags/offline-werewolf/issues"
  },
  "homepage": "https://github.com/VeryBadFrags/offline-werewolf#readme",
  "dependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "html-minifier": "^4.0.0",
    "node-sass": "^4.14.1",
    "qrcode": "^1.4.4"
  }
}
